{
	"name": "You're small!",
	"description": "66% scale\n80% speed\n80% jump height",
	"type": "origins:action_on_callback",
	"entity_action_chosen": {
		"type": "origins:and",
		"actions": [
			{
				"type": "origins:execute_command",
				"command": "scale persist set true @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:height 0.66 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:width 0.66 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:motion 0.80 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:step_height 1.1 @s"
			}
		]
	},
	"entity_action_lost": {
		"type": "origins:execute_command",
		"command": "scale reset @s"
	}
}