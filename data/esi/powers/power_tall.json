{
	"name": "You're tall!",
	"description": "130% scale\n120% jump height\n200% step height",
	"type": "origins:action_on_callback",
	"entity_action_chosen": {
		"type": "origins:and",
		"actions": [
			{
				"type": "origins:execute_command",
				"command": "scale persist set true @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:height 1.3 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:width 1.3 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:jump_height 1.2 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:step_height 2 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:reach 1.3 @s"
			}
		]
	},
	"entity_action_lost": {
		"type": "origins:execute_command",
		"command": "scale reset @s"
	}
}
