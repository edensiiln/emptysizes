{
	"name": "You're very tiny!",
	"description": "20% scale\n70% speed\n70% jump height",
	"type": "origins:action_on_callback",
	"entity_action_chosen": {
		"type": "origins:and",
		"actions": [
			{
				"type": "origins:execute_command",
				"command": "scale persist set true @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:height 0.2 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:width 0.2 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:motion 0.7 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:falling 0.7 @s"
			},
			{
				"type": "origins:execute_command",
				"command": "scale set pehkui:reach 0.7 @s"
			}
		]
	},
	"entity_action_lost": {
		"type": "origins:execute_command",
		"command": "scale reset @s"
	}
}
